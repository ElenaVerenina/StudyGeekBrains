using System;

namespace Lesson_2___5
{
    class Program
    {
        enum Month
        {
                Январь,
                Февраль,
                Март,
                Апрель,
                Май,
                Июнь,
                Июль,
                Август,
                Сентябрь,
                Октябрь,
                Ноябрь,
                Декабрь
        }
        static void Main(string[] args)
        {
            
            Console.WriteLine("Пожалуйста, введите минимальную температуру месяца");
            float minTemp = float.Parse(Console.ReadLine()); 
            Console.WriteLine("Пожалуйста, введите максимальную температуру месяца");
            float maxTemp = float.Parse(Console.ReadLine()); 
            float midTemp = (minTemp + maxTemp) / 2;
            Console.WriteLine("Пожалуйста, введите порядковый номер месяца");
            byte NumberMonth = Convert.ToByte(Console.ReadLine());
            if ((NumberMonth <= 2 || NumberMonth == 12) && midTemp > 0)
                {
                    Console.WriteLine($"Средняя температура: {midTemp}, месяц: {(Month)NumberMonth-1}");
                    Console.WriteLine("Дождливая зима");
                    }
                    else Console.WriteLine($"Средняя температура: {midTemp}, месяц: {(Month)NumberMonth-1}");
                    }
                }
}
