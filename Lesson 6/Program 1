using System;
using System.Diagnostics;

namespace Lesson_6
{
    class Program
    {
        static void Main(string[] args)
        {
            Process[] localAll = Process.GetProcesses();
            Console.Write("Name of process   ");
            Console.SetCursorPosition(50, 0);
            Console.WriteLine("Id of process");
            for (int i=0; i<localAll.Length;i++)
            {
                Console.Write($"{localAll[i].ProcessName}   ");
                Console.SetCursorPosition(50, i+1);
                Console.WriteLine($"{localAll[i].Id}");
            }
            Console.WriteLine("What process finish?");
            string proc = Console.ReadLine();
            for (int i=0; i<localAll.Length; i++)
            {
                if (proc==localAll[i].ProcessName)
                {
                    try
                    {
                        foreach (Process pr in Process.GetProcessesByName(proc))
                        {
                            pr.Kill();
                        }
                    }
                    catch (Exception ex)
                    {
                        Console.WriteLine(ex.Message);
                    }
                }
                else if (proc == Convert.ToString(localAll[i].Id))
                {
                    try
                    {
                        Process p = Process.GetProcessById(Convert.ToInt32(proc));                       
                        p.Kill();                        
                    }
                    catch (Exception ex)
                    {
                        Console.WriteLine(ex.Message);
                    }
                }
            }
            
        }
    }
}
